{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    // To use module resolver
    "baseUrl": "./",
    "paths": {
      "*": ["src*"],
      "@screens": ["src/screens"],
      "@commons": ["src/commons"],
      "@utils": ["src/utils"],
      "@containers": ["src/containers"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
